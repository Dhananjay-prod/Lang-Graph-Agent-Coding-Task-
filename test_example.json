  "test_scenarios": {
    "happy_path": {
      "description": "Everything works perfectly",
      "characteristics": [
        "All required information provided",
        "Clear query intent",
        "Simple resolution available",
        "High confidence score (>90)"
      ]
    },
    "escalation_path": {
      "description": "Requires human intervention",
      "triggers": [
        "Financial decisions (refunds, billing errors)",
        "Complex technical issues",
        "High emotion/anger in query",
        "Low confidence score (<90)",
        "Multiple complex issues"
      ]
    },
    "clarification_path": {
      "description": "Missing information flow",
      "triggers": [
        "Missing email",
        "Vague query",
        "Missing order number",
        "Incomplete customer info"
      ]
    }
  },
  "validation_rules": {
    "stage_transitions": [
      "Every query must pass through INTAKE",
      "UNDERSTAND always follows INTAKE",
      "COMPLETE is always the final stage",
      "State variables must persist across stages",
      "Each stage must log its execution"
    ],
    "mcp_routing": [
      "Text processing goes to COMMON",
      "Database queries go to ATLAS",
      "AI reasoning goes to COMMON",
      "External APIs go to ATLAS",
      "State management is internal"
    ],
    "escalation_criteria": [
      "Solution score < 90",
      "Financial impact > $100",
      "Customer explicitly requests human",
      "Complex technical issues",
      "Legal/compliance matters"
    ]
  }
